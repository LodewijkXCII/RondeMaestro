{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "The Countries schema",
  "required": ["id", "name", "abbreviation"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "integer",
      "title": "The id schema",
      "description": "An explanation about the purpose of this instance.",
      "default": 0,
      "examples": [1]
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The name schema",
      "examples": ["Afghanistan"]
    },
    "abbreviation": {
      "$id": "#/properties/abbreviation",
      "type": "string",
      "title": "The abbreviation schema",
      "examples": ["AF"]
    }
  }
}
